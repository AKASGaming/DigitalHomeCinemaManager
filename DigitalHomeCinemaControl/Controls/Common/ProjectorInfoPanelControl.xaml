<Controls:DeviceControl x:Class="DigitalHomeCinemaControl.Controls.Common.ProjectorInfoPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DigitalHomeCinemaControl.Controls.Common"
             xmlns:Controls="clr-namespace:DigitalHomeCinemaControl.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="PROJECTOR INFO" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FF818181" FontSize="18" />
            <local:SmallListControl x:Name="SmallList" Margin="10,0,10,0"></local:SmallListControl>
        </StackPanel>
    </Grid>
</Controls:DeviceControl>
